{% extends 'customers-layout.twig' %}

{% block title %}
    Edited customer
{% endblock %}


{% block contentTitle %}
  <h2>Customer Edited</h2>
{% endblock %}

{% block innerContent %}
    <tr>
      <td>{{ customer.personnumber }}</td>
      <td>{{ customer.name }}</td>
      <td>{{ customer.address }}</td>
      <td>{{ customer.postaladdress }}</td>
      <td>{{ customer.phonenumber }}</td>
      <td>
      <form method="post" action="/editcustomer">
        <input style="display: none" name="personnumber" type="text" value="{{ customer.personnumber }}" >
        <input class="btn-standard" type="submit" value="Edit" {% if customer.renting == true %}disabled{% endif %}>
      </form>
    </td>
      <td>
        <form method="post" action="/deletecustomer" >
          <input style="display: none" name="personnumber" type="text" value="{{ customer.personnumber }}" >
          <input class="btn-standard" type="submit" value="Delete" onclick="return confirm('Are you absolutely sure you want to delete this customer?')" {% if customer.renting == true %}disabled{% endif %}>
        </form>
      </td>
    </tr>
  </table>
{% endblock %}