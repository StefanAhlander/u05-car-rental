{% extends 'layout.twig' %}

{% block title %}
    Checked out car
{% endblock %}

{% block contentTitle %}
  <h2>Checked out car</h2>
{% endblock %}

{% block content %}
  <table>
    <thead>
      <th>Registration</th>
      <th>Person number</th>
      <th>Check out time</th>
      <th>Check in time</th>
      <th>Days</th>
      <th>Cost</th>
      <th></th>
    </thead>

    <tr>
      <td>{{ rental.registration }}</td>
      <td>{{ rental.personnumber }}</td>
      <td>{{ rental.checkouttime }}</td>
      <td>{{ rental.checkintime }}</td>
      <td>{{ rental.days }}</td>
      <td>{{ rental.cost }}</td>
      <td>
        <form method="post" action="/checkin">
          <input name="registration" value="{{ rental.registration }}" style="display: none">
          <input class="btn-standard" type="submit" value="Check in car">
        </form>
      </td>
    </tr>
  </table>
{% endblock %}
