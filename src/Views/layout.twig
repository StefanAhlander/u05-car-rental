<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" type="text/css" href="{{ baseUrl }}/styles/theme.css">
    <title>{% block title %}{% endblock %}</title>  </head>
  <body>
    <header class="background-dark">
      <h1><a href="./">Sunshine Car Rental</a></h1>
    </header>

    <nav>
      <form method="post" action="{{ baseUrl }}/customers">
        <input type="submit" value="Customers">
      </form>
      <form method="post" action="{{ baseUrl }}/cars">
        <input type="submit" value="Cars">
      </form>
      <form method="post" action="{{ baseUrl }}/checkout">
        <input type="submit" value="Check out car">
      </form>
      <form method="post" action="{{ baseUrl }}/checkin">
        <input type="submit" value="Check in car">
      </form>
      <form method="post" action="{{ baseUrl }}/history">
        <input type="submit" value="History">
      </form>
    </nav>

    <main>
      {% block contentTitle %}{% endblock %}
      {% block content %}{% endblock %}
    </main>

    <script src="{{ baseUrl }}/js/main.js"></script>
  </body>
</html>
