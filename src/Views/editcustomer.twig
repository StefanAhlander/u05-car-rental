{% extends 'layout.twig' %}

{% block title %}
    Add customer
{% endblock %}

{% block content %}
<h2>Edit customer</h2>

<form class="customerform" method="post" action="/editedcustomer">
  <ul>
    <li>
      <label for="personnumberplaceholder">Person number:</label>
      <input type="text" name="personnumberplaceholder" value="{{ customer.personnumber }}" disabled>
      <span>Personal number can't be edited.</span>
      <input type="text" name="personnumber" value="{{ customer.personnumber }}" style="display: none">
    </li>
    
    <li>
      <label for="name">Name:</label>
      <input type="text" name="name" value="{{ customer.name }}">
      <span>Add full name.</span>
   </li>
    
    <li>
      <label for="address">Address:</label>
      <input type="text" name="address" value="{{ customer.address }}">
      <span>Add street address.</span>
    </li>
    
    <li>
      <label for="postaladdress">Postal Address:</label>
      <input type="text" name="postaladdress" value="{{ customer.postaladdress }}">
       <span>Add postal number and city.</span>
   </li>
  
    <li>
      <label for="phonenumber">Phonenumber:</label>
      <input type="text" name="phonenumber" value="{{ customer.phonenumber }}">
      <span>Add phonenumber.</span>
    </li>

    <li>
      <input type="submit" value="Save customer" >
    </li>
  </ul>
</form>
{% endblock %}